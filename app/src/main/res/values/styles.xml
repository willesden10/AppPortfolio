<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/LightBlue</item>
    </style>

    <color name="LightBlue">#e3f2fd</color>

    <!-- Customisation of the ActionBar -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#ff9800</item>
        <item name="android:logo">@android:color/transparent</item>
    </style>

    <!-- Common attributes for the buttons -->
    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>
